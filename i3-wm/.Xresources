!--------------------------------------------------------------------------------------------
! To apply changes execute xrdb -load ~/.Xresources
!--------------------------------------------------------------------------------------------

! DPI settings
Xft.dpi       : 96
Xft.autohint  : false
Xft.lcdfilter : lcddefault
Xft.hintstyle : hintslight
Xft.hinting   : true
Xft.antialias : true
Xft.rgba      : rgb

Xcursor.theme: Phoeton

!--------------------------------------------------------------------------------------------
! Install:
!  PACMAN: urxvt-perls
!  AUR: urxvt-resize-font-git
!
! urxvt terminal config
!--------------------------------------------------------------------------------------------

URxvt.perl-ext-common      : resize-font,keyboard-select
URxvt.depth                : 32
URxvt.background           : [90]#0d0f0f
URxvt.scrollBar            : false
URxvt.font                 : xft:Hack:pixelsize=12:antialias=true:autohint=true:hintstyle=full
URxvt.internalBorder       : 5
URxvt.foreground           : 15
URxvt.letterSpace          : -1
URxvt.cursorBlink          : true
URxvt.cursorColor          : 15
URxvt.mouseWheelScrollPage : true
URxvt.keysym.C-Down        : resize-font:smaller
URxvt.keysym.C-Up          : resize-font:bigger
URxvt.keysym.M-C-slash     : perl:aAtt:word-complete
URxvt.keysym.M-question    : perl:aAtt:fuzzy-complete
URxvt.keysym.M-quotedbl    : perl:aAtt:undo
URxvt.keysym.M-Escape      : perl:keyboard-select:activate

!--------------------------------------------------------------------------------------------
! Install:
! AUR: st-luke-git
!
! st terminal config
!--------------------------------------------------------------------------------------------

st.font                    : HackNerdFont:pixelsize=12:antialias=true:autohint=true:fixed=true
st.alpha                   : 0.8

