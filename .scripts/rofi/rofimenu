#!/bin/sh
#
# Rofi general menu (centralize all rofi menus)
#

window="ğŸ“‚ Window"
ssh="ğŸ”’ Ssh"
drun="ğŸ› ï¸ Applications"
http="ğŸŒ Http"
clipboard="ğŸ“‹ Clipboard"
disp="ğŸ’» Display"
power="ğŸ”Œ Power Management"
#network="ğŸ–§ Network Manager"
mount="ğŸ“¥ Mount Devices"
umount="ğŸ“¤ Unmount Devices"
calc="ğŸ–© Calculator"

options="${window},${ssh},${drun},${http}, \
${clipboard},${disp},${power}, \
${mount},${umount},${calc} \
"

launch="$(rofiprompt "Choose option" "${options}")"
case "${launch}" in
   "${window}")
      "${SCRIPTS}"/rofi/rofiwindow
      ;;
   "${ssh}")
      "${SCRIPTS}"/rofi/rofissh
      ;;
   "${drun}")
      "${SCRIPTS}"/rofi/rofidrun
      ;;
   "${http}") # Depends: PACMAN: surf
      "${SCRIPTS}"/rofi/rofisurf
      ;;
   "${clipboard}") # Depends: AUR:rofi-greenclip
      "${SCRIPTS}"/rofi/roficlip
      ;;
   "${network}") # Depends: AUR: networkmanager-dmenu-git
      networkmanager_dmenu
      ;;
   "${disp}")
      "${SCRIPTS}"/rofi/rofidisplay
      ;;
   "${power}")
      "${SCRIPTS}"/rofi/rofipower
      ;;
   "${mount}")
      "${SCRIPTS}"/rofi/rofimount
      ;;
   "${umount}")
      "${SCRIPTS}"/rofi/rofiumount
      ;;
   "${calc}") # Depends: AUR:rofi-calc
      "${SCRIPTS}"/rofi/roficalc
      ;;
   *)
      exit 1
      ;;
esac
