#!/bin/sh
#
# Rofi power management menu
#

reboot="ğŸ”„ Reboot"
shutdown="âœ–ï¸ Shutdown"
susp="ğŸ’¤ Suspend"
lock="ğŸ”’ Lock"
log_out="âï¸ Log out"

options="${reboot},${shutdown},${susp},${lock},${log_out}"
locker=betterlockscreen
launch="$(rofiprompt "Choose option" "${options}")"

case "${launch}" in
   "${reboot}")
      systemctl reboot
      ;;
   "${shutdown}")
      systemctl poweroff
      ;;
   "${susp}")
      ${locker} -s; #systemctl suspend
      ;;
   "${lock}")
      ${locker} -l
      ;;
   "${log_out}")
      i3-msg exit
      ;;
   *)
      exit 1
      ;;
esac
